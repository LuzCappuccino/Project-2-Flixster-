<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.luzcamacho.flixster.DetailsMovieActivity"
    tools:showIn="@layout/activity_details_movie">


    <TextView
        android:id="@+id/tvTitleClick"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#FFF"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/ivPosterClick"
        android:layout_width="95dp"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvTitleClick"
        app:srcCompat="@android:color/background_dark" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvOverviewClick"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#FFF"
        android:layout_marginLeft="190dp"
        android:isIndicator="false" />

    <TextView
        android:id="@+id/tvOverviewClick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tvTitleClick"
        android:layout_toEndOf="@+id/ivPosterClick"
        android:layout_toRightOf="@+id/ivPosterClick"
        android:text="TextView"
        android:textColor="#FFF" />
</RelativeLayout>
